#include <iostream>
using namespace std;
int main()
{
    int  a, b, c;
    cout << "Input the number you wish to put: ";
    cin >> c;

    for (a = c; a >= 1; a--)
    {
        for (b = 1; b <= a; b++)
        {
            cout << "* ";
        }

        cout << "\n";
    }
    return 0;
    
}
