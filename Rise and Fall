#include <iostream>
using namespace std;

int main()
{
    int a, b, c;
    cout << "Input the number you wish to put: ";
    cin >> a;
    for (b = 1; b <= a; b++)
    {
        for (c = 1; c <= b; c++)
        {
            cout << "*";
        }
        cout << "\n";
    }
    for (b = a; b >= 1; b--)
    {
        for (c = 1; c <= b; c++)
        {
            cout << "*";
        }
        cout << "\n";
    }
    return 0;
}
